{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "out",
    "strict": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["out", "node_modules", "src/language-server/definition"]
}
